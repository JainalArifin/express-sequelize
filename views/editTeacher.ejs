<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <form  action="/teacher/edit/<%= dtTeacher.id %>" method="post">
    <input type="text" name="first_name" value="<%= dtTeacher.first_name %>">
    <input type="text" name="last_name" value="<%= dtTeacher.last_name %>">
    <input type="text" name="email" value="<%= dtTeacher.email %>">
    <select name="SubjectId">
        <% if(dtTeacher.SubjectId == null){%>
          <option value="">Unassigned</option>
          <% dtSubject.forEach(data =>{ %>
            <option value="<%= data.id %>"><%= data.subject_name %></option>
          <% }) %>
        <% }else{ %>
          <option value="<%= dtTeacher.SubjectId %>" selected="<%= dtTeacher.SubjectId %>"><%= dtTeacher.Subject.subject_name %></option>
          <option value="<%= dtSubject.id %>"><%= dtSubject.subject_name %></option>
        <% } %>
    </select>
    <button type="submit" name="submit">Save</button>
    </form>
  </body>
</html>
