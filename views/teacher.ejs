<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%- include partial/header %>
    <title></title>
  </head>
  <body>
    <a href="/">Home</a>
    <a href="/teacher">Teacher</a>
    <a href="/subject">Subject</a>
    <a href="/student">Student</a>
    <br><br>
    <h1>Tabel Teacher</h1>
    <h2><a href="/teacher/add">ADD Teacher</a></h2>
    <table border="1" class="table table-striped table-hover ">
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Subject</th>
        <th colspan="2">Action</th>
      </tr>
      <% dtTeacher.forEach(data=>{ %>
        <tr>
          <th><%= data.id %></th>
          <td><%= data.first_name %></td>
          <td><%= data.last_name %></td>
          <td><%= data.email %></td>
          <% if(data.SubjectId == null){ %>
            <td>Unassigned</td>
          <% }else{ %>
            <td><%= data.Subject.subject_name %></td>
          <% } %>
          <td>
            <a href="/teacher/edit/<%= data.id %>">Edit</a>
          </td>
          <td>
            <a href="/teacher/delete/<%= data.id %>">Delete</a>
          </td>
        </tr>
      <% }) %>
    </table>
  </body>
</html>
